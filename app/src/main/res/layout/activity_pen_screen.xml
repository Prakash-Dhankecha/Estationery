<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PenScreen">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="1000dp"
        android:layout_height="200dp"
        android:background="#FFF3F3"
        android:backgroundTint="#FFDEDE"
        app:srcCompat="@drawable/pens"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shanghai Hero Pens"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$60, per pen"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="normal"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:srcCompat="@drawable/rupee"
                android:layout_marginTop="10dp"
                android:layout_marginRight="220dp"
                android:layout_marginLeft="-4dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Free"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="-240dp"
                android:layout_marginRight="100dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="190"
                android:layout_marginTop="35dp"
                android:text="Delivery"
                android:layout_marginLeft="-130dp"
                android:layout_marginRight="260dp"
                android:textSize="15dp"
                android:textColor="@color/black"/>




        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/location"
            android:layout_marginTop="245dp"
            android:layout_marginLeft="120dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.5 KM"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="245dp"
            android:layout_marginRight="140dp"/>


    </LinearLayout>


</RelativeLayout>