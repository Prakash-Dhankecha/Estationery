<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PenScreen">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="1000dp"
        android:layout_height="200dp"
        android:background="#FFF3F3"
        android:backgroundTint="#FFDEDE"
        app:srcCompat="@drawable/pens"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shanghai Hero Pens"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$60, per pen"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="normal"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/rupee"
                android:layout_marginTop="20dp"
                android:layout_marginRight="200dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Free"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="-190dp"
                android:layout_marginRight="100dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="190"
                android:layout_marginTop="35dp"
                android:text="Delivery"
                android:layout_marginLeft="-125dp"
                android:layout_marginRight="250dp"
                android:textSize="15dp"
                android:textColor="@color/black"/>




        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/location"
            android:layout_marginTop="265dp"
            android:layout_marginLeft="120dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.5 KM"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="265dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="140dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textColor="@color/black"
            android:layout_marginTop="285dp"
            android:layout_marginLeft="-200dp"
            android:layout_marginRight="100dp"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/star"
            android:layout_marginTop="265dp"
            android:layout_marginLeft="-130dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="265dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(500 + review)"
            android:textColor="@color/black"
            android:layout_marginTop="285dp"
            android:layout_marginLeft="-90dp"
            android:layout_marginRight="0dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-123dp"
        android:orientation="vertical">

        <View

            android:layout_width="432dp"
            android:layout_height="4dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="440dp"
            android:background="#C4C4C4" />

    </LinearLayout>
   <HorizontalScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:fillViewport="true">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:layout_marginTop="320dp"
           >
           <Button
               android:id="@+id/allmenu"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="All Menu"
               android:backgroundTint="#FFFEFE"
               android:textColor="#D89B9B"
               android:textSize="20dp"
               android:textStyle="bold"/>
           <Button
               android:id="@+id/pens"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Pens"
               android:backgroundTint="#FFFEFE"
               android:textColor="#C41D1D1D"
               android:textSize="20dp"
               android:textStyle="normal"/>
           <Button
               android:id="@+id/toys"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Toys"
               android:backgroundTint="#FFFEFE"
               android:textColor="#C41D1D1D"
               android:textSize="20dp"
               android:textStyle="normal"/>
           <Button
               android:id="@+id/eraser"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Eraser/Shapner"
               android:backgroundTint="#FFFEFE"
               android:textColor="#C41D1D1D"
               android:textSize="20dp"
               android:textStyle="normal"/>
           <Button
               android:id="@+id/books"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Books"
               android:backgroundTint="#FFFEFE"
               android:textColor="#C41D1D1D"
               android:textSize="20dp"
               android:textStyle="normal"/>
           <Button
               android:id="@+id/more"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="More"
               android:backgroundTint="#FFFEFE"
               android:textColor="#C41D1D1D"
               android:textSize="20dp"
               android:textStyle="normal"/>
       </LinearLayout>

   </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="375dp"
                android:text="Most Popular"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"/>
    <ImageView
                 android:layout_width="150dp"
                 android:layout_height="150dp"
                 android:src="@drawable/pen"
                 android:layout_marginTop="40dp"
                 android:layout_marginLeft="10dp"
                 android:background="@drawable/shapebg"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-12dp"
                android:textSize="15dp"
                android:text="+ ADD"/>


        </LinearLayout>

    </ScrollView>





</RelativeLayout>